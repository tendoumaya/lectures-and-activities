{
  "description": "Demo plugin for neurodiversity and accessibility uses",
  "manifest_version": 2,
  "name": "Neuria Demo",
  "version": "0.1",
  "homepage_url": "https://github.com/tendoumaya/lectures-and-activities/neurodiversity-plugin-demo",
  "icons": {
    "48": "icons/marker-1.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/Neuria.js"]
    }
  ],
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/marker-1.png",
    "default_title": "Neuria",
    "default_popup": "toobar/toobar.html",
    "browser_style": true
  }

}
